{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": false,
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2022", "dom", "dom.iterable"],
    "declaration": true,
    "declarationDir": "typings",
    "emitDeclarationOnly": true
  },
  "include": ["./**/*.ts"]
}
