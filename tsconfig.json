{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@readymade/core": ["src/modules/core"],
      "@readymade/dom": ["src/modules/dom"],
      "@readymade/router": ["src/modules/router"],
      "@readymade/ui": ["src/modules/ui"]
    }
  }
}
