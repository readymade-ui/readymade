{
  "name": "readymade",
  "version": "2.0.0",
  "description": "JavaScript microlibrary for developing Web Components with Decorators",
  "type": "module",
  "main": "index.html",
  "targets": {
    "main": false,
    "node": {
      "context": "node",
      "outputFormat": "commonjs",
      "source": "src/server/index.ts",
      "distDir": "dist/server"
    },
    "dev": {
      "source": "src/client/index.html",
      "distDir": "dist/client",
      "publicUrl": "/"
    }
  },
  "engines": {
    "node": "20"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development vite-node ./src/server/index.ts",
    "copy:root": "copyfiles src/client/robots.txt src/client/static.html src/client/hello.html src/client/hello-state.html src/client/performance.html src/client/custom.html dist/client --flat",
    "clean": "yarn clean:dist && yarn clean:packages",
    "clean:dist": "rimraf dist",
    "clean:packages": "rimraf packages",
    "deploy:gh-pages": "gh-pages --dist-dir dist/client --branch gh-pages",
    "start:client": "cross-env NODE_ENV=development vite dev ./src/client --port 4443",
    "lint": "eslint src/**/*.ts --fix",
    "build": "cross-env NODE_ENV=production yarn clean:dist && yarn build:prod",
    "build:prod": "yarn clean:dist && concurrently \"yarn build:index\" \"yarn build:routes\" \"yarn build:server\"",
    "build:gh-pages": "yarn build:dev && node pages.js",
    "build:extra": "yarn copy:root && yarn build:mock",
    "build:lib": "./BUILD.sh",
    "build:mock": "rollup -c src/client/rollup.mock.js",
    "build:static": "rollup -c ./src/client/rollup.static.js",
    "build:index": "vite build ./src/client/ --outDir ../../dist/client --config vite.config.index.js",
    "build:routes": "vite build ./src/client/ --outDir ../../dist/client --config vite.config.routes.js",
    "build:server": "vite build --outDir dist/server --ssr src/server/index.ts --config vite.config.server.js",
    "pretty": "prettier \"src/**/*.{js,ts,html,css,scss}\" --write",
    "pretty:check": "prettier \"src/**/*.{js,ts,html,css,scss}\" --check",
    "serve": "cross-env NODE_ENV=production node dist/server/index.js",
    "test": "cypress run",
    "test:chrome": "cypress run --browser chrome",
    "test:open": "cypress open --browser chrome",
    "test:paint": "tach mock/paint/index.html --root=mock/paint --browser=chrome-headless --measure=fcp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steveblue/custom-elements.git"
  },
  "keywords": [
    "custom",
    "elements",
    "web",
    "components",
    "custom",
    "elements",
    "api",
    "ui",
    "library"
  ],
  "author": "Steve Belovarich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steveblue/custom-elements/issues"
  },
  "homepage": "https://github.com/steveblue/custom-elements#readme",
  "dependencies": {
    "@lit-labs/ssr": "^3.2.2",
    "@ungap/custom-elements": "^1.3.0",
    "broadcastchannel-polyfill": "^1.0.1",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0",
    "compression": "^1.7.4",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "element-internals-polyfill": "^1.3.12",
    "express": "^4.21.0",
    "gh-pages": "^6.1.1",
    "he": "^1.2.0",
    "html-minifier-terser": "^7.2.0",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "jsdom": "^25.0.1",
    "lit-html": "^3.2.0",
    "node-fetch": "2.6.7",
    "node-window-polyfill": "^1.0.2",
    "prismjs": "^1.29.0",
    "rimraf": "^6.0.1",
    "vite-node": "^2.1.2"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@rollup/plugin-url": "^8.0.2",
    "@types/gh-pages": "^6",
    "@types/he": "^1",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "chokidar": "^4.0.1",
    "chromedriver": "^129.0.2",
    "copyfiles": "^2.4.1",
    "cssnano": "^7.0.6",
    "cypress": "^13.15.0",
    "cypress-ct-lit": "^0.5.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "helmet": "^8.0.0",
    "htmlnano": "^2.1.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.2.15",
    "posthtml": "^0.16.6",
    "posthtml-inline": "^1.0.0",
    "prettier": "^3.3.3",
    "rollup": "4.24.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-inline-postcss": "^3.0.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-module-replacement": "^1.2.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-string-html": "^1.0.0",
    "sass": "^1.79.4",
    "stream-browserify": "3",
    "tachometer": "^0.7.1",
    "tslib": "~2.7.0",
    "typescript": "~5.5.0",
    "vite": "^5.4.8",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-standard-css-modules": "^0.0.11"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "externals": [
    "./src/server/config.js"
  ],
  "packageManager": "yarn@4.5.0"
}
