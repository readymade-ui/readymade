{
  "name": "readymade",
  "version": "1.0.0",
  "description": "JavaScript microlibrary for developing Web Components with Decorators.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "seed": "mkdir dist && mkdir dist/style",
    "start": "node index.js",
    "build": "NODE_ENV=prod node index.js",
    "dev": "live-server ./dist --entry-file=index.html",
    "serve": "node backend/server.js",
    "bundle:core": "rollup -c rollup.library.js",
    "deploy:core": "cp -R ./packages/@readymade/core/* ../readymade-core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steveblue/custom-elements.git"
  },
  "keywords": [
    "custom",
    "elements",
    "web",
    "components",
    "custom",
    "elements",
    "api",
    "ui",
    "library"
  ],
  "author": "Steve Belovarich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steveblue/custom-elements/issues"
  },
  "homepage": "https://github.com/steveblue/custom-elements#readme",
  "dependencies": {
    "@types/webcomponents.js": "^0.6.33",
    "@ungap/custom-elements-builtin": "^0.1.2",
    "@vaadin/router": "^1.2.0",
    "@webcomponents/custom-elements": "^1.2.1",
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@types/node": "^10.12.12",
    "chokidar": "^2.0.4",
    "livereload": "^0.7.0",
    "postcss": "^7.0.7",
    "postcss-cli": "^6.1.0",
    "postcss-csso": "^3.0.0",
    "postcss-host": "^1.1.2",
    "postcss-import": "^12.0.1",
    "postcss-mixins": "^6.2.1",
    "rollup": "^0.66.0",
    "rollup-plugin-cleanup": "^3.1.0",
    "rollup-plugin-inline-postcss": "^1.0.0",
    "rollup-plugin-minify-html-literals": "^1.1.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.19.2",
    "rollup-plugin-uglify": "^6.0.0",
    "terser": "^3.11.0",
